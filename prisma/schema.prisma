// prisma/schema.prisma

// 1. ここが消えていないかチェック！
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// 2. Oshiモデルを修正（userEmailを追加）
model Oshi {
  id          String   @id
  name        String
  userEmail   String   
  image       String?
  agency      String?
  unit        String?
  mainGenre   String?
  createdAt   DateTime @default(now())
  actions     Action[]

  @@unique([id, userEmail])
}

model Action {
  id           Int      @id @default(autoincrement())
  oshiId       String
  oshi         Oshi     @relation(fields: [oshiId], references: [id])
  clickedAt    DateTime @default(now())
  contentType  String
  userEmail    String
}

// prisma/schema.prisma

model UserPreference {
  id           String   @id @default(cuid())
  userEmail    String   @unique
  // タグごとの得点を保存する場所 (例: {"歌枠": 50, "原神": 30})
  tagScores    Json     @default("{}") 
  // その日のアンケートで選んだタグ
  interests    String[] 
  // 最後にアンケートに答えた日時（「毎日アンケート」の判定用）
  lastSurveyAt DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model CachedVideo {
  id           String   @id // YouTube Video ID
  title        String
  thumbnail    String
  channelTitle String
  channelId    String
  category     String   // 雑談、歌枠などのタグ名
  publishedAt  DateTime
  duration     String
  viewCount    String
  cachedAt     DateTime @default(now()) // これで「2時間以内か」を判定
}
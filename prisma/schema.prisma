// prisma/schema.prisma

// 1. ここが消えていないかチェック！
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// 2. Oshiモデルを修正（userEmailを追加）
model Oshi {
  id          String   @id
  name        String
  userEmail   String   // これが重要！
  agency      String?
  unit        String?
  mainGenre   String?
  createdAt   DateTime @default(now())
  actions     Action[]

  @@unique([id, userEmail])
}

model Action {
  id           Int      @id @default(autoincrement())
  oshiId       String
  oshi         Oshi     @relation(fields: [oshiId], references: [id])
  clickedAt    DateTime @default(now())
  contentType  String
  userEmail    String
}